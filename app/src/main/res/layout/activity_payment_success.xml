<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentSuccess">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:background="#ffffff"
             android:padding="20dp"
             android:src="@drawable/wakeepay_logo" />

         <TextView
             android:id="@+id/login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginBottom="5dp"
             android:background="#3999d9"
             android:padding="5dp"
             android:text="PAYMENT SUCCESSFUL"
             android:textAlignment="center"
             android:textAllCaps="true"
             android:textColor="#ffffff"
             android:textSize="30dp"
             android:textStyle="bold" />

<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/success_big"
    android:layout_gravity="center_horizontal"
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you! We have received your payment. \n Below are the transaction details:"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:text="Payment Reference Id :"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewTransIdVal"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:text="dnkmcmlkdsmcklv"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:text="Amount Paid :"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewAmtVal"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:text="dnkmcmlkdsmcklv"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/lmcal"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:text="Payment Date :"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewTransDateVal"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:text="VC"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#000000"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btnHome"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="GO TO HOME"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
   />



</LinearLayout>