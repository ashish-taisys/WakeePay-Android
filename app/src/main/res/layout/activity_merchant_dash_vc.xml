<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MerchantDashVC">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:padding="20dp"
            android:orientation="vertical"
            android:src="@drawable/wakeepay_logo" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="#ffffff"
            android:src="@drawable/logout" />

    </RelativeLayout>

    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#06429D"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS:-"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Merchantstatus"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="InActive"
            android:textColor="#ff0d00"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/payImage"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:src="@drawable/payment_icon"
            />

        <Button
            android:id="@+id/payment"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_toEndOf="@+id/payImage"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="PAYMENT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#06429D"
            android:layout_toRightOf="@+id/payImage" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/proImage"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:src="@drawable/profile_icon"
            />

        <Button
            android:id="@+id/profile"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:text="PROFILE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/proImage"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#06429D"
            android:layout_toRightOf="@+id/proImage" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/tranImage"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:src="@drawable/transactions_icon"
            />


        <Button
            android:id="@+id/transaction"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:text="TRANSACTION"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/tranImage"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#06429D"
            android:layout_toRightOf="@+id/tranImage" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/qrImage"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:src="@drawable/qrlogo"
            />

        <Button
            android:id="@+id/qr"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:text="QR CODE"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#06429D"
            android:layout_toEndOf="@+id/qrImage"
            android:layout_toRightOf="@+id/qrImage" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/banner2">

    </RelativeLayout>


</LinearLayout>